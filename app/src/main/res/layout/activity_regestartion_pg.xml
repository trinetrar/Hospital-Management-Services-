<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE5E5"
    android:orientation="vertical"
    tools:context=".regestartion_pg">


    <ImageView
        android:layout_width="125dp"
        android:layout_height="116dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/regimage" />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:text="Create your Account "
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:hint="Enter full name "
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/email"
            android:layout_height="wrap_content"
            android:hint="Email "
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/mobilnum"
            android:layout_height="wrap_content"
            android:hint="Mobile number "
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/pass"
            android:layout_height="wrap_content"
            android:hint="Password "
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regbtn"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="#6DB6E3"
        android:text="Register Here" />
a

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logbtn"
        android:layout_width="282dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="#7B9ECD"
        android:gravity="center"
        android:text="Login Here" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eopdbutton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="#8EB5E8"
        android:text="EOPD" />


</LinearLayout>